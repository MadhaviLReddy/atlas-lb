<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
    <repose-cluster id="repose">
        <nodes>
	    <node id="node1" hostname="127.0.0.1" http-port="8999"/> 
	    <node id="node2" hostname="10.1.9.1" http-port="8999"/>
        </nodes>
        <filters>
            <filter name="dist-datastore" />
            <filter name="content-normalization" />
            <filter name="client-auth" />
            <filter name="api-validator" />
            <filter name="client-authorization" uri-regex="^/(?!application.wadl$).*"/>
            <filter name="ip-identity" />
            <filter name="rate-limiting" />
            <filter name="service-authentication" />
            <filter name="http-logging" />
        </filters>
        <destinations>
            <endpoint id="public-api" protocol="http" hostname="localhost" root-path="" port="8080" default="true"/>
        </destinations>
    </repose-cluster>
</system-model>
